<h1>Friends</h1>

<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col">User ID</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Show', friend, class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= button_to "Delete", friend, class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
    

  
</div>

<%= link_to "Add new friend", new_friend_path, class: 'btn btn-secondary' %>
